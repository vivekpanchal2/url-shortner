<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Document</title>
    <style>
      * {
        font-family: "Segoe UI", Tahoma, Geneva, Verdana, sans-serif;
      }
      h1 {
        text-align: center;
      }

      table,
      tr,
      th,
      td {
        border: 1px solid black;
        border-collapse: collapse;
        padding: 5px;
      }
      div {
        margin: 10px;
      }
      .container {
        display: flex;
        align-items: center;
        justify-content: center;
        flex-direction: column;
      }
    </style>
  </head>
  <body>
    <h1>URL Shortner</h1>
    <div class="container">
      <div>
        <form action="/url" method="POST">
          <input name="url" placeholder="www.example.com" />
          <button type="submit">Generate</button>
        </form>
        <% if (locals.shortId) { %>
        <p>URL generated: http://localhost:3000/url/<%= shortId %></p>
        <% } %>
      </div>

      <div>
        <% console.log(locals) %> <% if (locals.urls) { %>
        <table>
          <thead>
            <tr>
              <th>no.</th>
              <th>Short Id</th>
              <th>Redirect Link</th>
              <th>Clicks</th>
            </tr>
          </thead>

          <tbody>
            <% if (Array.isArray(urls)) { %> <% urls.forEach((url, index) => {
            %>
            <tr>
              <td><%= index + 1 %></td>
              <td><%= url.shortId %></td>
              <td><%= url.redirectUrl %></td>
              <td><%= url.visitedHistory.length %></td>
            </tr>
            <% }) %> <% } else { %>
            <tr>
              <td colspan="4">No URLs found.</td>
            </tr>
            <% } %>
          </tbody>
        </table>
        <% } %>
      </div>
    </div>
  </body>
</html>
